<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.thesis.smartparkinglot.authentication.viewmodel.LoginViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".authentication.fragment.LoginFragment">
        <LinearLayout
            android:orientation="vertical"
            android:paddingHorizontal="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/hi_there"
                android:textSize="25dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@drawable/background_input_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/username"
                    android:hint="@string/user_name"
                    android:fontFamily="sans-serif-medium"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:text="@={viewModel.userName}"
                    android:autofillHints="name"
                    android:paddingVertical="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/password"
                    android:hint="@string/password"
                    android:background="@null"
                    android:textSize="15dp"
                    android:text="@={viewModel.password}"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="textPassword"
                    android:autofillHints="name"
                    android:paddingVertical="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
<!--            <LinearLayout-->
<!--                android:id="@+id/btn_signIn"-->
<!--                android:clickable="true"-->
<!--                android:layout_marginTop="30dp"-->
<!--                android:layout_marginHorizontal="40dp"-->
<!--                android:background="@drawable/background_button_login"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:focusable="true">-->
<!--                <TextView-->
<!--                    android:text="Sign In"-->
<!--                    android:fontFamily="sans-serif-medium"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="17dp"-->
<!--                    android:paddingVertical="12dp"-->
<!--                    android:layout_marginHorizontal="20dp"-->
<!--                    android:textAlignment="center"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"/>-->
<!--            </LinearLayout>-->
            <Button
                android:id="@+id/btn_signIn"
                android:enabled="@{viewModel.isEnableSignInBtn()}"
                android:onClick="@{viewModel::clickSignIn}"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="40dp"
                android:text="@string/sign_in"
                android:background="@drawable/background_button_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/don_t_have_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_register"
                    android:clickable="true"
                    android:fontFamily="sans-serif-medium"
                    android:textColorLink="@color/green_ming_0"
                    android:textColor="@color/green_ming_0"
                    android:text="@string/Register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>