<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".authentication.fragment.RegisterInfoFragment">
    <ImageView
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/ic_back"
        android:src="@drawable/ic_back"
        app:tint="@color/green_ming"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/register"
            android:text="Register User"
            android:textSize="30dp"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/username"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:animateLayoutChanges="true"
                    android:hint="Username"
                    app:boxBackgroundMode="outline">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_username"
                        android:maxLines="1"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:nextFocusDown="@+id/password"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:animateLayoutChanges="true"
                    android:hint="Password"
                    app:boxBackgroundMode="outline">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_password"
                        android:maxLines="1"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:nextFocusDown="@+id/card_id"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/card_id"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:animateLayoutChanges="true"
                    android:layout_marginTop="8dp"
                    android:hint="Card Id"
                    app:boxBackgroundMode="outline">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_card_id"
                        android:maxLines="1"
                        android:nextFocusDown="@id/address"
                        android:inputType="text"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/address"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:animateLayoutChanges="true"
                    android:hint="Address"
                    app:boxBackgroundMode="outline">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_address"
                        android:maxLines="1"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nextFocusDown="@id/car_number"
                        android:layout_gravity="center_vertical" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/car_number"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:animateLayoutChanges="true"
                    android:hint="Car number"
                    app:boxBackgroundMode="outline">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_car_number"
                        android:maxLines="1"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:id="@+id/car_img"
                    android:visibility="gone"
                    android:layout_marginHorizontal="20dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background_input_register_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_img"
                        android:visibility="visible"
                        android:fontFamily="sans-serif-medium"
                        android:paddingVertical="18dp"
                        android:text="Car number image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/image"
                        android:visibility="gone"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_person"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_register"
                    android:clickable="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="40dp"
                    android:background="@drawable/background_button_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true">
                    <TextView
                        android:text="Done"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:paddingVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>